# SDK2 package definition for lapack95

# Set package-specific variables

PKG_NAME=lapack95
SRC_FILE=lapack95.tgz

SRC_DIR=$PKG_NAME
BUILD_DIR=${SRC_DIR}/SRC

# Functions

unpack () {

    echo "Unpacking $PKG_NAME into $SD"

    # Unpack the tarball

    rm -rf $SD
    mkdir $SD

    tar xf $SF -C $SD --strip-components 1

    if [ $? -ne 0 ]; then
	echo "FAILED in tar for $PKG_NAME (file $SF)"
	exit 1
    fi

    # Move other files into place

    cp ${PD}/lapack95/make.inc ${SD}/make.inc

}

build () {

    echo "Building $PKG_NAME in $BD"

    # Build

    cd $BD

    make clean
    make single_double_complex_dcomplex
    
    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PKG_NAME from $SD"

    # Copy the static library and module files

    cd $SD

    cp -av lapack95.a ${DEST_ROOT}/lib/liblapack95.a
    cp -av lapack95_modules/*.mod ${DEST_ROOT}/include/

    # Create the shared libraries

    create_shared_lib \
        -c gfortran \
        -L ${DEST_ROOT}/lib -lblas -lxblas -llapack -ltmg \
        ${DEST_ROOT}/lib/liblapack95.a

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/lapack95
    cp -av README ${DEST_ROOT}/share/doc/lapack95/

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_ENV}}/ ${SDK2_PROFILE_ROOT}/common/lapack95/lapack95_link > \
	${DEST_ROOT}/bin/lapack95_link
    chmod a+x ${DEST_ROOT}/bin/lapack95_link

}
