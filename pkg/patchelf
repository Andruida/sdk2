# SDK2 package definition for patchelf

# Set package-specific variables

PKG_NAME=patchelf
SRC_FILE=patchelf-0.9.tar.gz

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./bootstrap.sh

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$BD

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}
