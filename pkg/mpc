# SDK2 package definition for mpc

# Set package-specific variables

PKG_NAME=mpc
SRC_FILE=mpc-1.1.0.tar.gz

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$DEST_ROOT \
	--with-gmp=$DEST_ROOT \
	--with-mpfr=$DEST_ROOT

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PKG_NAME from $BD"

    # Install

    cd $BD

    make install

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/mpc/
    cp -av AUTHORS COPYING.LESSER INSTALL NEWS README TODO ${DEST_ROOT}/share/doc/mpc/

}
