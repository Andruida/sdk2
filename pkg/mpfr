# SDK2 package definition for mpfr

# Set package-specific variables

PKG_NAME=mpfr
SRC_FILE=mpfr-4.0.2.tar.bz2

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$DEST_ROOT \
	--with-gmp=$DEST_ROOT

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}
