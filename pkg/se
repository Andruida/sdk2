# SDK2 package definition for se

# Set package-specific variables

PKG_NAME=se
SRC_FILE=se-1.2.1.tar.gz

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
        --prefix=$DEST_ROOT \
	F77=gfortran \
	--with-hdf5=$DEST_ROOT

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES
    
    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PKG_NAME from $BD"

    # Install

    cd $BD

    make install

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/se
    cp -av COPYING INSTALL README ${DEST_ROOT}/share/doc/se

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_ENV}}/g ${SDK2_PROFILE_ROOT}/common/se/se_link > \
	${DEST_ROOT}/bin/se_link
    chmod a+x ${DEST_ROOT}/bin/se_link

}
