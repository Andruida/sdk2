# SDK2 package definition for x264

# Set package-specific variables

PKG_NAME=x264
SRC_FILE=x264-snapshot-20190310-2245-stable.tar.bz2

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--host=$BUILD_SPEC \
	--prefix=$DEST_ROOT \
	--enable-shared \
	--disable-asm

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES
    
    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}
