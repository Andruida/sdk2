# SDK2 package definition for png (local install for pgplot)

# Set package-specific variables

PKG_NAME=png_pgplot
SRC_FILE=libpng-1.5.13.tar.gz

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    CFLAGS='-fPIC' ./configure \
	--build=$BUILD_SPEC \
	--prefix=$BD

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    cp scripts/pnglibconf.h.prebuilt pnglibconf.h        

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}
