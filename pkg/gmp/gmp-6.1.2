# SDK2 package definition for gmp

# Set package-specific variables

PKG_NAME=gmp
SRC_FILE=gmp-6.1.2.tar.bz2

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$DEST_ROOT

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PKG_NAME from $BD"

    # Install

    cd $BD

    make install

    # Install docs

    mkdir -pv ${DEST_ROOT}/share/doc/${PKG_NAME}
    cp -av AUTHORS COPYING* INSTALL* NEWS README ${DEST_ROOT}/share/doc/${PKG_NAME}

}
