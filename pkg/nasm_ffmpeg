# SDK2 package definition for nasm (local install for ffmpeg)

# Set package-specific variables

PKG_NAME=nasm
SRC_FILE=nasm-2.14.02.tar.bz2

SRC_DIR=$PKG_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PKG_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$BD

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PKG_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PKG_NAME"
	exit 1
    fi

}
