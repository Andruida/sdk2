# SDK2 package definition for valgrind

# Set package-specific variables

PACKAGE_NAME=valgrind
SRC_FILE=valgrind-3.13.0.tar.bz2

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$DEST_ROOT \
	--enable-only64bit 	

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PACKAGE_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}
