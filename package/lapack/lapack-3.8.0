# SDK2 package definition for lapack

# Set package-specific variables

PACKAGE_NAME=lapack
SRC_FILE=lapack-3.8.0.tar.gz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

unpack () {

    echo "Unpacking $PACKAGE_NAME into $SD"

    # Unpack the tarball

    rm -rf $SD
    mkdir $SD

    tar xf $SF -C $SD --strip-components 1

    if [ $? -ne 0 ]; then
	echo "FAILED in tar for $PACKAGE_NAME"
	exit 1
    fi

    # Move other files into place

    cp ${PD}/lapack/make.inc ${SD}/make.inc

}

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make clean
    rm -f *.a

    # Build

    make -j$NCORES lib

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Copy the static libraries

    cd $BD

    cp -av liblapack.a ${DEST_ROOT}/lib/
    cp -av libtmg.a ${DEST_ROOT}/lib/

    # Create the shared libraries

    create_shared_lib \
        -c gfortran \
        -L ${DEST_ROOT}/lib -lblas -lxblas \
	${DEST_ROOT}/lib/liblapack.a
    create_shared_lib \
        -c gfortran  \
        -L ${DEST_ROOT}/lib -lblas -lxblas -llapack \
	${DEST_ROOT}/lib/libtmg.a

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/lapack
    cp -av LICENSE README.md ${DEST_ROOT}/share/doc/lapack/

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_ENV}}/g ${SDK2_PROFILE_ROOT}/common/lapack/lapack_link > \
	${DEST_ROOT}/bin/lapack_link
    chmod a+x ${DEST_ROOT}/bin/lapack_link

}
