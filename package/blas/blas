# SDK2 package definition for blas

# Set package-specific variables

PACKAGE_NAME=blas
SRC_FILE=blas.tgz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

unpack () {

    echo "Unpacking $PACKAGE_NAME into $SD"

    # Unpack the tarball

    rm -rf $SD
    mkdir $SD

    tar xf $SF -C $SD --strip-components 1

    if [ $? -ne 0 ]; then
	echo "FAILED in tar for $PACKAGE (file $SF)"
	exit 1
    fi

    # Move other files into place

    cp ${PD}/blas/make.inc ${SD}/make.inc

}

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make clean

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BUILD_DIR"

    build_dir=${SDK2_BUILD_ROOT}/${BUILD_DIR}

    # Copy the static library

    cd $build_dir

    cp -a libblas.a ${DEST_ROOT}/lib/

    # Create the shared library

    create_shared_lib -c gfortran ${DEST_ROOT}/lib/libblas.a

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_PREFIX}_ROOT}/g ${SDK2_PROFILE_ROOT}/common/blas/blas_link > \
	${DEST_ROOT}/bin/blas_link
    chmod a+x ${DEST_ROOT}/bin/blas_link

}
