# SDK2 package definition for default_xblas

# Set package-specific variables

PACKAGE_NAME=default_xblas
SRC_FILE=xblas.tar.gz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

unpack () {

    echo "Unpacking $PACKAGE_NAME into $SD"

    # Unpack the tarball

    rm -rf $SD
    mkdir $SD

    tar xf $SF -C $SD --strip-components 1

    if [ $? -ne 0 ]; then
	echo "FAILED in tar for $PACKAGE_NAME (file $SF)"
	exit 1
    fi

    # Move other files into place

    cp ${PD}/default_xblas/make.inc ${SD}/make.inc

}

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Build

    cd $BD

    make clean
    make -j$NCORES lib
    make

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Copy the static library

    cd $BD

    cp -av libxblas.a ${DEST_ROOT}/lib/math/default/

    # Create the shared library

    create_shared_lib \
	-c gfortran \
	${DEST_ROOT}/lib/math/default/libxblas.a

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_PREFIX}_ROOT}/g \
	${SDK2_PROFILE_ROOT}/common/default_xblas/xblas_link > ${DEST_ROOT}/bin/math/default/xblas_link
    chmod a+x ${DEST_ROOT}/bin/math/default/xblas_link

}
