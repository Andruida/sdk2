# SDK2 package definition for virtual_lapack95

# Set package-specific variables

PACKAGE_NAME=virtual_lapack95

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PACKAGE_NAME in $BD"

}    

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_PREFIX}_ROOT}/g \
    	-e s/@SDK_MATH@/\${${PROFILE_PREFIX}_MATH}/g \
	\${SDK2_PROFILE_ROOT}/common/virtual_lapack95/lapack95_link > ${DEST_ROOT}/bin/lapack95_link
    chmod a+x ${DEST_ROOT}/bin/lapack95_link

}
