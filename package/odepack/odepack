# SDK2 package definition for odepack

# Set package-specific variables

PACKAGE_NAME=odepack
SRC_FILE=odepack-omp.tar.gz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make clean

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Copy the static library and module file

    cd $BD

    cp -av libodepack.a ${DEST_ROOT}/lib/
    cp -av odepack.mod ${DEST_ROOT}/include

    # Create the link script

    sed -e s/@SDK_ROOT@/\${${PROFILE_ENV}}/g ${SDK2_PROFILE_ROOT}/common/odepack/odepack_link > \
	${DEST_ROOT}/bin/odepack_link
    chmod a+x ${DEST_ROOT}/bin/odepack_link

}
