# SDK2 package definition for mpc

# Set package-specific variables

PACKAGE_NAME=mpc
SRC_FILE=mpc-1.2.1.tar.gz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make distclean

    # Configure

    ./configure \
	--build=$BUILD_SPEC \
	--prefix=$DEST_ROOT \
	--with-gmp=$DEST_ROOT \
	--with-mpfr=$DEST_ROOT

    if [ $? -ne 0 ]; then
	echo "FAILED in configure for $PACKAGE_NAME"
	exit 1
    fi

    # Build

    make -j$NCORES

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Install

    cd $BD

    make install

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/mpc/
    cp -av AUTHORS COPYING.LESSER INSTALL NEWS README TODO ${DEST_ROOT}/share/doc/mpc/

    # This is to make sure we can overwrite docs during a bootstrap 2nd-stage install

    chmod a+rw ${DEST_ROOT}/share/doc/mpc/*

}
